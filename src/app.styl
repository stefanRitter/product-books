// breakpoints
iphone     = "(max-width:320px)"
phone      = "(max-width:460px)"
phablet    = "(max-width:768px)"
tablet     = "(max-width:980px)"
typeheight = "(max-height:375px)"


// colors
blue = white
gray = #2fb3da


// general
body
html
    height 100%
    margin 0
    font-family 'Helvetica Neue', Helvetica, Arial, sans-serif
    font-size 18px
    @media tablet
        font-size 14px

h1
h2
    font-weight 400

h1
    font-size 3em

h2
    font-size 1.5em

h3
    font-size 1.3em
    margin 0

main
    margin auto
    max-width 1400px
    text-align center


// responsive
.phone-only
  display none
  @media phone
    display block !important

.clear-both
  clear both
  padding-top 2em


// components
.title
  color blue
  background gray
  text-align center
  margin-top: 0
  h2, p
    max-width: 650px
    margin: 0 auto;
    font-weight: 100;
    letter-spacing: 1px
  p
    padding 1em 10px 2em
    text-align: justify;
  h2
    padding 5px 10px 2em
    line-height 1.3
    font-size: 26px
    @media phone
      font-size 1em
  h1
    margin 0
    padding 1em 10px 0.5em
    vertical-align middle
    @media phone
      padding 0.5em 0 0 0
    img
      vertical-align middle
      height 2em
    a
      color inherit
      text-decoration none
    @media phone
      em
        font-size .7em
        position relative
        top -0.5em

.alerts-form
  background LightGray
  text-align center
  padding 1.5em 15px 2em
  a
    color Black
  h3
    margin-bottom 0.4em
  label, input
    display block
    min-width 270px
    margin 0 10px
    @media phone
      margin 0
  label
    font-weight bold
    margin-top 1em
    &.second
      @media phablet
        margin-top: 0
  input
    border 0
    border-bottom 2px solid Black
    height 1.8em
    font-size 1.2em

.form-group
    display inline-block
    text-align left
    padding 0 3px

.form-button
.button
    appearance none
    border 0
    padding 10px 20px
    background gray
    color blue
    text-decoration none
    font-size 1em
    font-weight bold
    border-radius 5px
    text-transform uppercase
    letter-spacing 1px
    border-bottom 2px solid Black
    cursor pointer
    &:hover
        color inherit
        background #007acc

.form-button
  padding 0
  margin 0 10px
  height 2.5em
  width 100%
  position relative
  top -2px
  @media phone
    margin 0

.recommenders-links
    font-size:19px;
    font-weight:100;
    text-align:left;
    max-width:1200px;
    margin:auto

#books
    margin: 0
    padding: 0
    vertical-align: top;

.book
    display: inline-block;
    overflow: hidden;
    width 300px
    height 450px
    margin 15px
    a
        text-decoration: none;
        color: inherit;
    .book-title
        margin 0
        color gray
        font-size: 18px
        height: 70px
        vertical-align: middle;
        .author
            font-weight: 100;
            font-size: 14px
    img
        width auto
        height: 230px
    .recommenders
        font-weight: 100;
        font-size: 12px
        height: 50px
        span
            display: inline-block;
            text-decoration: underline;
            cursor: pointer;
            margin: 5px
    .tags
        margin 6px 0 8px
        text-align: center;
        .tag
            display: inline-block;
            background-color: pink
            color: white
            padding: 4px;
            border-radius: 3px
            font-size: 12px
            cursor: pointer;

.filters
    max-width: 1200px
    margin: 20px auto;
    padding: 15px

.tag-filter
    cursor: pointer;
    &.active
        text-decoration: underline;

footer
    clear both
    text-align center
    padding 3em 2em 8em 2em
    min-height 70%
    background gray
    color White
    a
        color blue
        font-weight bold
        text-decoration none
        border-bottom 2px solid blue
    h2
        font-size 2em
