// breakpoints
iphone     = "(max-width:320px)"
phone      = "(max-width:460px)"
phablet    = "(max-width:768px)"
tablet     = "(max-width:980px)"
typeheight = "(max-height:375px)"


// colors
pbBlue = #2fb3da
pbRed = #da2f92


// general
body
html
    height 100%
    margin 0
    font-family 'Helvetica Neue', Helvetica, Arial, sans-serif
    font-size 18px
    @media tablet
        font-size 16px

h1
h2
    font-weight 400

h1
    font-size 3em

h2
    font-size 1.5em

h3
    font-size 1.3em
    margin 0

main
    margin: auto;
    text-align center


// responsive
.phone-only
  display none
  @media phone
    display block !important

.clear-both
  clear both
  padding-top 2em


// components
.title
  color White
  background pbBlue
  text-align center
  margin-top: 0
  h2, p
    max-width: 650px
    margin: 0 auto;
    font-weight: 100;
    letter-spacing: 1px
  p
    padding 1em 10px 2em
    text-align: justify;
  h2
    padding 5px 10px 2em
    line-height 1.3
    font-size: 26px
    @media phone
      font-size 1em
  h1
    margin 0
    padding 1em 10px 0.5em
    vertical-align middle
    text-transform: uppercase;
    font-weight: 700;
    @media phone
      padding 0.5em 0 0 0
    img
      vertical-align middle
      height 2em
    a
      color inherit
      text-decoration none
    @media phone
      em
        font-size .7em
        position relative
        top -0.5em

.alerts-form
  background LightGray
  text-align center
  padding 1.5em 15px 2em
  a
    color Black
  h3
    margin-bottom 0.4em
  label, input
    display block
    min-width 270px
    margin 0 10px
    @media phone
      margin 0
  label
    font-weight bold
    margin-top 1em
    &.second
      @media phablet
        margin-top: 0
  input
    border 0
    border-bottom 2px solid Black
    height 1.8em
    font-size 1.2em

.form-group
    display inline-block
    text-align left
    padding 0 3px

.form-button
.button
    appearance none
    border 0
    padding 10px 20px
    background pbBlue
    color White
    text-decoration none
    font-size 1em
    font-weight bold
    border-radius 5px
    text-transform uppercase
    letter-spacing 1px
    border-bottom 2px solid Black
    cursor pointer
    &:hover
        color inherit
        background #007acc

.form-button
  padding 0
  margin 0 10px
  height 2.5em
  width 100%
  position relative
  top -2px
  @media phone
    margin 0

.recommenders-links
    font-size: 19px;
    line-height: 1.5;
    font-weight: 200;
    text-align: left;
    max-width: 1200px;
    margin: auto;
    padding: 15px;

#books
    margin auto
    max-width 1400px
    padding: 0
    vertical-align: top;

.book, .book-alert
    display: inline-block;
    overflow: hidden;
    width 300px
    height 485px
    margin 15px
    .rank
        padding-bottom: 5px;
        i
            font-weight: 400;
            font-size: 35px
        span
            font-weight: 100
    a
        text-decoration: none;
        color: inherit;
    .book-title
        margin 5px 0
        color Black
        font-size: 18px
        height: 70px
        vertical-align: middle;
        .author
            font-weight: 100;
            font-size: 14px
    img
        width auto
        height: 230px
    .recommenders
        margin-top: 4px;
        font-weight: 100;
        font-size: 12px
        height: 50px
        a
            display: inline-block;
            text-decoration: underline;
            cursor: pointer;
            margin: 5px
            color: inherit;
    .tags
        margin 5px 0 8px
        text-align: center;
        .tag
            display: inline-block;
            background-color: pink
            color: white
            padding: 4px 6px;
            border-radius: 3px
            font-size: 12px
            cursor: pointer;

.book-alert
    p
        margin-top: 85px;
        padding: 15px;
        font-weight: bold;
    @media phablet
        height: 175px
        p
            margin-top: 40px;

.filters
    margin: 30px auto 20px auto;
    h3
        padding: 15px
        text-align: left
        max-width: 1200px
        margin: auto;

.tag-filter
    cursor: pointer;
    display: inline-block;
    background: lightblue;
    padding: 5px 11px;
    margin: 5px;
    &.active
        text-decoration: underline;

footer
    clear both
    text-align center
    padding 3em 2em 8em 2em
    min-height 70%
    background pbBlue
    color White
    a
        color White
        font-weight bold
        text-decoration none
        border-bottom 2px solid White
    h2
        font-size 2em
