// breakpoints
iphone     = "(max-width:320px)"
phone      = "(max-width:460px)"
phablet    = "(max-width:768px)"
tablet     = "(max-width:980px)"
typeheight = "(max-height:375px)"


// colors
blue  = white
gray  = #2fb3da


// general
body
html
  height 100%
  margin 0
  font-family Helvetica, Arial, sans-serif
  font-size 18px
  @media tablet
    font-size 14px

h1
h2
  font-weight 400

h1
  font-size 3em

h2
  font-size 1.5em
  padding 0 0.3em

h3
  font-size 1.3em
  margin 0

main
  margin auto
  max-width 1200px
  text-align center


// responsive
.phone-only
  display none
  @media phone
    display block !important

.clear-both
  clear both
  padding-top 2em


// components
.title
  color blue
  background gray
  text-align center
  margin-top 0
  h2
    padding-bottom 2em
    margin 0
    line-height 1.5
    @media phone
      font-size 1em
  h1
    margin 0
    padding 1em 0.5em
    vertical-align middle
    @media phone
      padding 0.5em 0 0 0
    img
      vertical-align middle
      height 2em
    a
      color inherit
      text-decoration none
    @media phone
      em
        font-size .7em
        position relative
        top -0.5em

.alerts-form
  background LightGray
  text-align center
  padding 1.5em 15px 2em
  a
    color Black
  h3
    margin-bottom 0.4em
  label, input
    display block
    min-width 270px
    margin 0 10px
    @media phone
      margin 0
  label
    font-weight bold
    margin-top 1em
  input
    border 0
    border-bottom 2px solid Black
    height 2em
    font-size 1.2em

.form-group
  display inline-block
  text-align left
  padding 0 3px

.form-button
.button
  appearance none
  border 0
  padding 10px 20px
  background gray
  color blue
  text-decoration none
  font-size 1em
  font-weight bold
  border-radius 5px
  text-transform uppercase
  letter-spacing 1px
  border-bottom 2px solid Black
  cursor pointer
  &:hover
    color inherit
    background #007acc

.form-button
  padding 0
  margin 0 10px
  height 2.5em
  width 100%
  position relative
  top -2px
  @media phone
    margin 0

.book
  float left
  width 22%
  margin 1em 1.5%
  text-decoration none
  h1
    margin-bottom 0.5em
  a
    cursor pointer
    &:hover
      color inherit
      background #007acc
  .nav-links
    a
      &:hover
        background none
  span
    display inline-block
    margin-top 0.5em
    color gray
    -webkit-transition all 0.3s
    -moz-transition all 0.3s
    transition all 0.3s
  img
    width 80%
    -webkit-filter grayscale(100%)
    -moz-filter grayscale(100%)
    filter grayscale(100%)
    -webkit-transition all 0.3s
    -moz-transition all 0.3s
    transition all 0.3s
  &:hover
    img
      -webkit-filter grayscale(0)
      -moz-filter grayscale(0)
      filter grayscale(0)
  @media tablet
    width 30%
  @media phone
    width 47%

footer
  clear both
  text-align center
  padding 3em 2em 8em 2em
  min-height 70%
  background gray
  color White
  a
    color blue
    font-weight bold
    text-decoration none
    border-bottom 2px solid blue
  h2
    font-size 2em
